<h2 class="text-center">Create new post</h2>
<div class="col-6 m-auto">
  <%= form_with model: @post do |f| %>
    <div class="field">
      <%= f.label :content %><br />
      <%= f.text_area :content, class: 'col-12 text-area' %>
    </div>
    <div class="actions text-center">
      <%= f.submit "Post", class:"btn btn-primary" %>
    </div>
  <% end %>
</div>

