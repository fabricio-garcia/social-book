<div class = 'row col-8 mx-auto d-flex justify-content-center my-5'>
  <div class = col-2 >
  <%= image_tag @user.gravatar_url %>
  </div>
  <div class = 'col-3'>
    <%= @user.username %>
    <br>
    <%= @user.email %>
  </div>
</div>
<ul> 
  <% @user.posts.each do |post|%> 
    <li>
      <div class= 'card col-6 m-auto'>
        <body> <%= post.content %> </body>
        <p>Posted <%= time_ago_in_words(post.created_at)%> ago</p>
      </div>
    </li>
  <% end %>
</ul>